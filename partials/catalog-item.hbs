<article class="{{post_class}} u-shadow">
    {{> post-media same_height=true ratio="rectangle"}}
    <div class="post-wrapper">
        {{> post-header tag="h2"}}
        {{#if excerpt}}
        <div class="post-excerpt">
            {{excerpt words="12"}}
        </div>
        {{/if}}
    </div>
    {{> post-footer}}
</article>